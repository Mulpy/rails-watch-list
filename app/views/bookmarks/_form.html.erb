<%= simple_form_for [@list, @bookmark] do |f| %>
  <%= f.association :list, collection: List.order(name: :asc), include_blank: false %>
  <%= f.association :movie, collection: Movie.order(title: :asc), include_blank: false %>
  <%= f.input :comment, placeholder: 'Leave a comment' %>
  <%= f.submit class: 'btn btn-secondary' %>
<% end %>
