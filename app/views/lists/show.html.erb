<div class="container">
  <h1><%= @list.name.capitalize %></h1>
  <%= link_to "Add List", new_list_path, class: "btn btn-primary" %>
</div>
<%= link_to 'Add a bookmark', new_list_bookmark_path(@list), class: 'btn btn-ghost' %>
<% if @list.bookmarks.any? %>
  <% @list.bookmarks.each do |bookmark| %>
    <div class="card-trip">
      <%= image_tag bookmark.movie.poster_url %>
      <div class="card-trip-infos">
        <div>
          <h2><%= bookmark.movie.title %></h2>
          <p><%= bookmark.movie.overview %></p>
          <p><em>"<%= bookmark.comment %>"</em></p>
        </div>
        <%= link_to "Delete", bookmark_path(bookmark), class: "btn btn-danger", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
      </div>
    </div>
    <h3> </h3>
  <% end %>
<% end %>
