<div class="container">
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://www.thescottishsun.co.uk/wp-content/uploads/sites/2/2018/08/nintchdbpict000000444356.jpg?crop=0px%2C111px%2C1772px%2C1182px&resize=2080%2C1385);">
    <div class="container">
      <h1><%= @list.name.split.map(&:capitalize).join(' ') %></h1>
      <%# <%= link_to 'Add a Bookmark', new_list_bookmark_path(@list), class: 'btn btn-secondary' %>
    </div>
  </div>
  <div class="list">
    <% if @list.bookmarks.any? %>
      <% @list.bookmarks.each do |bookmark| %>
        <div class="card" style="width: 18rem;">
          <%= image_tag bookmark.movie.poster_url %>
          <div class="card-body">
            <h5 class="card-title"><%= bookmark.movie.title %> ~ <%= bookmark.movie.rating %></h5>
            <p class="card-text"><%= bookmark.movie.overview %></p>
            <p class="card-text"><em>"<%= bookmark.comment %>" - Anon</em></p>
            <%= link_to bookmark_path(bookmark), class: "btn btn-secondary", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
              <i class="fa-solid fa-trash-can"></i>
            <% end %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
